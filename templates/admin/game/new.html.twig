{% extends 'admin.base.html.twig' %}

{% block title %}Admin nouveau joueur{% endblock %}
{% block titre %}Nouvelle Partie{% endblock %}
{% block ariane %}
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
        <li><a href="{{ path('admin.game.index') }}"><i class="fa fa-gamepad"></i>Parties</a></li>
        <li class="active">Nouvelle Partie</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="box box-primary">
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="form-group col-xs-4">
                    {{ form_row(form.tour) }}
                </div>
                <div class="form-group col-xs-4">
                    {{ form_row(form.tour_joueur) }}
                </div>
                <div class="form-group col-xs-4">
                    {{ form_row(form.etat) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-6">
                    {{ form_row(form.j1) }}
                </div>
                <div class="form-group col-xs-6">
                    {{ form_row(form.j2) }}
                </div>
            </div>
            <button class="btn btn-info pull-right">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
