<form method="post" action="{{ path('admin.player.delete', {'id': player.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer le joueur ?');" class="inline">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
    <button class="btn btn-danger btn-flat">Supprimer</button>
</form>
