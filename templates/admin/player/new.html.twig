{% extends 'admin.base.html.twig' %}


{% block title %}Admin nouveau joueur{% endblock %}
{% block titre %}Nouveau Joueur{% endblock %}
{% block ariane %}
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
        <li><a href="{{ path('admin.player.index') }}"><i class="fa fa-user"></i>Joueurs</a></li>
        <li class="active">Nouveau Joueur</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="box box-primary">
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="form-group col-xs-6">
                    {{ form_row(form.username) }}
                </div>
                <div class="form-group col-xs-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_row(form.password) }}
            </div>
            <button class="btn btn-info pull-right">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
