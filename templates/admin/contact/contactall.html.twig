{% extends 'admin.base.html.twig' %}

{% block title %}Admin contact communauté{% endblock %}
{% block titre %}Envoie de mail à la communauté{% endblock %}
{% block ariane %}
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
        <li class="active">Contact Communauté</li>
    </ol>
{% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="row margin">
            <p class="alert alert-success">
                {{ message }}
            </p>
        </div>
    {% endfor %}
    <div class="box box-primary">
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row margin">
                <div class="form-group">
                    {{ form_row(form.sujet) }}
                </div>
            </div>
            <div class="row margin">
                <div class="">
                    <div class="form-group">
                        {{ form_row(form.message) }}
                    </div>
                </div>
            </div>
            <button class="btn bg-gray btn-flat btn-sm pull-right">{{ button_label|default('Envoyer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
